<h1>Add a new course</h1>

<form method="POST" action="/courses">
  <label for="course_name">Course Name: </label>
  <input type="text" name="course[name]" id="course_name">
  <br><br>
  <label for="course_date">Course Date: </label>
  <input type="date" name="course[date]" id="course_date">
  <br><br>
  <label for="num_of_hours">Number of Hours: </label>
  <input type="number" name="course[num_of_hours]" id="course_num_of_hours">
  <br><br>
  <label for="status">Status: </label>
  <input type="text" name="course[status]" id="course_status">
  <br><br>
  <input type="submit" value="Add New Course">
</form>
